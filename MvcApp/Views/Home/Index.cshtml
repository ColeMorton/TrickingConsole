@model MvcApp.Models.HomeModel

@{
    ViewBag.Title = "Home";
    Layout = "../Shared/_BootstrapLayout.cshtml";
}

<h2>Home</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "IndexForm" }))
{

<form>
        
        <legend>Tricking Console</legend>
        
            @if (Model.Trickers.Any())
            {
                
                                <div class="editor-label">
            @Html.LabelFor(model => model.TrickerId)
        </div>
                <div class="editor-field">
                    @Html.DropDownList(
                        "TrickerId",
                        (IEnumerable<SelectListItem>)
                        Model.Trickers,
                        "--Select One--",
                        new
                            {
                                onchange = "document.getElementById('IndexForm').submit('Index');"
                            })
                </div>
            }
        
            @if (Model.TrickersTricks.Any())
            {
                
                <div class="editor-label">
            @Html.LabelFor(model => model.TrickersTrickId)
        </div>
                <div class="editor-field">
                    @Html.DropDownList(
                        "TrickersTrickId",
                        (IEnumerable<SelectListItem>)
                        Model.TrickersTricks,
                        "--Select One--",
                        new
                            {
                                onchange = "document.getElementById('IndexForm').submit();"
                            })
                </div>
                
            }
        
        
            @if (Model.TrickersTrickId != 0)
            {
                <p>
                    <button type="submit" value="PerformTrick" name="action" class="btn btn-primary">
                        Perform Trick
                    </button>
                </p>
            }
        
    </form>

    <form>
    
        <legend>Output</legend>
    
        <div>
            @Html.TextArea("ConsoleText", Model.ConsoleText, new {@style = "width: 100%"})
        </div>
    
    </form>

}
